{
  "name": "uci-quiz-app",
  "version": "1.0.0",
  "scripts": {
    "server": "cd server && nodemon server.js",
    "watch-server-dev": "cd server && yarn watch",
    "watch-client-dev": "cd client && yarn watch",
    "watch-server-prod": "cd server && NODE_ENV=production yarn watch",
    "watch-client-prod": "cd client && NODE_ENV=production yarn watch",
    "start": "yarn watch-server-dev & yarn watch-client-dev",
    "start-prod": "yarn watch-server-prod & yarn watch-client-prod",
    "deploy": "cd client && yarn build &&  cd .. && yarn server"

  },
  "repository": "git@github.com:dimolf345/uci-quiz-app.git",
  "author": "dimolf345 <dimolfetta.ta@gmail.com>",
